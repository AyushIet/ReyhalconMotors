<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/my_linear_layout_style"
    android:id="@+id/recycler_view_linear_layout"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="10dp"
        android:id="@+id/recycler_view_image_view"/>
    <LinearLayout
       style="@style/my_linear_layout_style"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            style="@style/my_text_view_style1"
            android:id="@+id/recycler_view_name"/>
        <TextView
            style="@style/my_text_view_style1"
            android:id="@+id/recycler_view_designation"/>
        <TextView
            style="@style/my_text_view_style1"
            android:id="@+id/recycler_view_salary"/>
        <TextView
            style="@style/my_text_view_style1"
            android:id="@+id/recycler_view_today_attendance"/>
    </LinearLayout>
</LinearLayout>